

<div class="background">
  <% if @sites != [] %>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-5">
        <div class="d-flex justify-content-between mt-5 mb-5">
          <h2>My Gardens</h2>
          <div class="d-flex justify-content-center">
            <%= link_to "New Garden", new_site_path, class: "btn btn-ghost" %>
          </div>
        </div>
        <% @sites.each do |site|  %>
          <%= link_to site_path(site) do %>
            <div class="card-category">
              <div class="d-flex justify-content-between">
                <h3><%= site.name %></h3>
                <div class="log-crud-btns pb-2">
                  <%= link_to edit_site_path(site) do %>
                    <i class="fa-solid fa-pen"></i>
                  <% end %>
                  <%= link_to site_path(site), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                    <i class="fa-solid fa-trash"></i>
                  <% end %>
                </div>
              </div>
              <p><%= site.address %></p>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="col-1"></div>
      <div class="col-5"></div>
    </div>

  <% else %>
    <div class="d-flex align-items-center justify-content-center no-plants">
      <h1> Ready to start rewilding? <%= link_to "Click here to create your first site", new_site_path %>. </h1>
    </div>
  <% end %>
</div>
