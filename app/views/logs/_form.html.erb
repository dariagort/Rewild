<div class="container-form">
  <h2><strong>New log for:&nbsp&nbsp&nbsp</strong> <%= @site.project_name %></h2>
  <%= simple_form_for [@site, @log] do |f| %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :date %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.submit %>
  <% end %>
</div>
