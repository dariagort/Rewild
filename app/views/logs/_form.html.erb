<div class="container-form">
  <h2>Log for:&nbsp<%= @site.name %></h2>
  <%= simple_form_for [@site, @log] do |f| %>
    <%= f.input :date %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :seed_id, :collection => @site.seeds, :include_blank => false %>
    <%= f.input :mood_id, :collection => @site.moods, :include_blank => false %>
    <%= f.submit %>
  <% end %>
</div>
